<Window x:Class="BeadandoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeadandoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Margin="0,24,0,0"/>
        <Menu>
            <MenuItem Header="_Menü">
                <MenuItem Header="_Szín" >
                    <RadioButton Content="Red" HorizontalAlignment="Left" Margin="34,0,0,0"/>
                    <RadioButton Content="Green" HorizontalAlignment="Left" Margin="34,0,0,0"/>
                    <RadioButton Content="Blue" HorizontalAlignment="Left" Margin="34,0,0,0"/>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Kilépés" Click="kilepClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
